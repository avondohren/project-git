<h1>Student Information</h1>
<p>Name: <%= @student.name %></p>


<table>
	<thead>
		<th>Class Term</th>
		<th>Class Name</th>
	</thead>
	<tbody>
		<% @roster.each do |roster| %>
			<% klass = Klass.find_by_id(roster.klass_id) %>
			<% term = Term.find_by_id(klass.term_id)%>
			<td><%= term.name %></td>
			<td><%= klass.name %></td>
		<% end %>
	</tbody>
</table>